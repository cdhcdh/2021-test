<h1>{{ title }}</h1>

<table><!-- 테이블 시작 -->
<tr><!--tr은 행을 의미합니다.-->
    <td>Dname</td><!--td는 열을 의미합니다-->
    <td>Dnumber</td>
    <td>Mgr_ssn</td>
    <td>Mgr_start_date</td>
</tr>
{{#each dept_res}}<!--#each /each를 사용해 반복하면서 테이블을 채웁니다.-->
    <form method="post"><!--form method을 사용해서 값을 입력-->
        <tr>
        <!--input tag를 사용하여 입력 가능한 형태로 변경함(다른 방법도 검색하면 있음) -->
        <td><input type="text" name="dname" placeholder={{Dname}}></td><!--placeholder: 텍스트안에 보여지는 값-->
        <td>{{Dnumber}}</td>
        <td>{{Mgr_ssn}}</td>
        <td>{{Mgr_start_date}}</td>
        <!-- formaction 속성을 활용하여 입력한 값을 넘겨줌) -->
        <td><input type="submit" value="수정" formaction="/update/department"></td><!--update/department로 값을 넘겨줍니다-->
        </tr>
    </form>
    {{/each}}
</table>